<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_sm"
    android:paddingBottom="@dimen/padding_sm">

    <ImageView
        android:id="@+id/nav_item_icon"
        android:layout_width="@dimen/bottom_navigation_icon_size"
        android:layout_height="@dimen/bottom_navigation_icon_size"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_home" />

    <TextView
        android:id="@+id/nav_item_label"
        style="@style/TextAppearance.Kardio.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxs"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/nav_item_inactive"
        android:textSize="@dimen/bottom_navigation_text_size"
        tools:text="Home" />

</LinearLayout>