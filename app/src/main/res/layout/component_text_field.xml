<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_field_label"
            style="@style/TextAppearance.Kardio.Subtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xs"
            android:visibility="visible"
            tools:text="Username" />

        <FrameLayout
            android:id="@+id/text_field_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_field_height"
            android:background="@color/background_input">

            <EditText
                android:id="@+id/text_field_edit_text"
                style="@style/TextAppearance.Kardio.Body1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/input_field_padding_horizontal"
                android:paddingTop="@dimen/input_field_padding_vertical"
                android:paddingEnd="@dimen/input_field_padding_horizontal"
                android:paddingBottom="@dimen/input_field_padding_vertical"
                android:singleLine="true"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                tools:hint="Enter username" />

        </FrameLayout>

        <TextView
            android:id="@+id/text_field_helper"
            style="@style/TextAppearance.Kardio.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textColor="@color/text_tertiary"
            android:visibility="gone"
            tools:text="Helper text"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_field_error"
            style="@style/TextAppearance.Kardio.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textColor="@color/error"
            android:visibility="gone"
            tools:text="Error message"
            tools:visibility="visible" />

    </LinearLayout>

</merge>