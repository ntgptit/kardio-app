<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <!-- Streak Flame (Shows when the day has a streak) -->
    <ImageView
        android:id="@+id/day_flame"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_streak_flame"
        app:tint="@color/streak_flame_orange"
        android:visibility="gone"
        android:elevation="2dp"
        android:paddingBottom="4dp"
        tools:visibility="visible" />

    <!-- Day Number -->
    <TextView
        android:id="@+id/day_number"
        style="@style/TextAppearance.Kardio.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="10" />
</FrameLayout>
