<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Grammar Folder Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/grammar_folder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_sm"
        app:cardBackgroundColor="@color/background_secondary"
        app:cardCornerRadius="@dimen/radius_md"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/other_folder"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <ImageView
                android:id="@+id/grammar_folder_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_folder"
                app:tint="@color/accent" />

            <TextView
                android:id="@+id/grammar_folder_title"
                style="@style/TextAppearance.Kardio.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="Grammar"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/grammar_folder_avatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile_placeholder"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <TextView
                    android:id="@+id/grammar_folder_username"
                    style="@style/TextAppearance.Kardio.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:text="giapnguyen1994"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/grammar_folder_plus_badge"
                    style="@style/TextAppearance.Kardio.Badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:background="@drawable/bg_plus_badge"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="PLUS"
                    android:textColor="@color/text_primary"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Other Folder Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/other_folder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_sm"
        app:cardBackgroundColor="@color/background_secondary"
        app:cardCornerRadius="@dimen/radius_md"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/grammar_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/grammar_folder"
        app:layout_constraintTop_toTopOf="@id/grammar_folder"
        app:layout_constraintWidth_percent="0.48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <ImageView
                android:id="@+id/other_folder_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_folder"
                app:tint="@color/secondary" />

            <TextView
                android:id="@+id/other_folder_title"
                style="@style/TextAppearance.Kardio.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="Others"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/other_folder_avatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile_placeholder"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <TextView
                    android:id="@+id/other_folder_username"
                    style="@style/TextAppearance.Kardio.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:text="giapnguyen1994"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/other_folder_plus_badge"
                    style="@style/TextAppearance.Kardio.Badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:background="@drawable/bg_plus_badge"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="PLUS"
                    android:textColor="@color/text_primary"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>