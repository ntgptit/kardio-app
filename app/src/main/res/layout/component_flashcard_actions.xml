<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_md">

    <!-- Learning Button (Left) -->
    <include
        android:id="@+id/action_learning"
        layout="@layout/component_flashcard_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_xl" />

    <!-- Play/Pause Button (Center) -->
    <include
        android:id="@+id/action_play"
        layout="@layout/component_flashcard_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Learned Button (Right) -->
    <include
        android:id="@+id/action_learned"
        layout="@layout/component_flashcard_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl" />

</LinearLayout>