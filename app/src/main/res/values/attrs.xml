<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common attributes that can be shared between components -->
    <attr name="qlzAnimationEnabled" format="boolean" />
    <attr name="qlzHapticFeedback" format="boolean" />
    <attr name="qlzGlowEnabled" format="boolean" />
    <attr name="qlzTitle" format="string" />
    <attr name="qlzIcon" format="reference" />
    <attr name="qlzShowDivider" format="boolean" />
    <attr name="qlzBackgroundColor" format="color|reference" />
    <attr name="qlzCornerRadius" format="dimension" />
    <attr name="qlzRequired" format="boolean" />
    <attr name="qlzIsLoading" format="boolean" />
    <attr name="qlzButtonText" format="string" />

    <!-- Button Components -->
    <declare-styleable name="QlzPrimaryButton">
        <attr name="qlzButtonText" />
        <attr name="qlzTextColor" format="color|reference" />
        <attr name="qlzBackgroundColor"/>
        <attr name="qlzIsLoading"/>
        <attr name="icon" format="reference" />
        <attr name="iconTint" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="QlzSecondaryButton">
        <attr name="qlzAnimationEnabled" />
        <attr name="qlzHapticFeedback" />
    </declare-styleable>

    <declare-styleable name="QlzIconButton">
        <attr name="qlzAnimationEnabled" />
        <attr name="qlzGlowEnabled" />
        <attr name="qlzHapticFeedback" />
    </declare-styleable>

    <declare-styleable name="QlzFloatingActionButton">
        <attr name="qlzAnimationEnabled" />
        <attr name="qlzGlowEnabled" />
        <attr name="qlzHapticFeedback" />
    </declare-styleable>

    <!-- Card Components -->
    <declare-styleable name="QlzBaseCard">
        <!-- Base card attributes -->
    </declare-styleable>

    <declare-styleable name="QlzStudyCard">
        <attr name="qlzTitle" />
        <attr name="qlzSubtitle" format="string" />
        <attr name="qlzCount" format="string" />
        <attr name="qlzIcon" />
    </declare-styleable>

    <declare-styleable name="QlzNeumorphicCard">
        <attr name="qlzNeumorphicShapeType" format="enum">
            <enum name="flat" value="0" />
            <enum name="pressed" value="1" />
            <enum name="basin" value="2" />
        </attr>
        <attr name="qlzHasStroke" format="boolean" />
        <attr name="qlzStrokeColor" format="color|reference" />
        <attr name="qlzStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="QlzGlassmorphicCard">
        <attr name="qlzBackgroundColor" />
        <attr name="qlzBorderColor" format="color|reference" />
        <attr name="qlzBorderWidth" format="dimension" />
        <attr name="qlzBorderAlpha" format="float" />
        <attr name="qlzGlowColor" format="color|reference" />
        <attr name="qlzGlowAlpha" format="float" />
        <attr name="qlzGlowEnabled" />
        <attr name="cardCornerRadius" />
    </declare-styleable>

    <declare-styleable name="QlzQuizCard">
        <attr name="qlzQuestionText" format="string" />
        <attr name="qlzIndexText" format="string" />
        <attr name="qlzQuestionTextSize" format="dimension" />
    </declare-styleable>

    <!-- Input Components -->
    <declare-styleable name="QlzTextField">
        <attr name="qlzLabel" format="string" />
        <attr name="qlzHelperText" format="string" />
        <attr name="qlzErrorText" format="string" />
        <attr name="qlzIcon" />
        <attr name="qlzHint" format="string" />
        <attr name="qlzRequired" />
        <attr name="qlzIsPassword" format="boolean" />
        <attr name="android:hint" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="QlzSearchField">
        <attr name="android:hint" />
    </declare-styleable>

    <!-- Feedback Components -->
    <declare-styleable name="QlzLoadingIndicator">
        <attr name="qlzLoadingMessage" format="string" />
        <attr name="qlzIsLoading" />
    </declare-styleable>

    <declare-styleable name="QlzEmptyStateView">
        <attr name="qlzTitle" />
        <attr name="qlzDescription" format="string" />
        <attr name="qlzButtonText"/>
        <attr name="qlzIcon" />
    </declare-styleable>

    <!-- Navigation Components -->
    <declare-styleable name="QlzBottomNavBar">
        <attr name="qlzItemCount" format="integer" />
        <attr name="qlzSelectedItemIndex" format="integer" />
        <attr name="qlzAnimationEnabled" />
        <attr name="qlzItem1Icon" format="reference" />
        <attr name="qlzItem1Label" format="string" />
        <attr name="qlzItem2Icon" format="reference" />
        <attr name="qlzItem2Label" format="string" />
        <attr name="qlzItem3Icon" format="reference" />
        <attr name="qlzItem3Label" format="string" />
        <attr name="qlzItem4Icon" format="reference" />
        <attr name="qlzItem4Label" format="string" />
        <attr name="qlzItem5Icon" format="reference" />
        <attr name="qlzItem5Label" format="string" />
    </declare-styleable>

    <declare-styleable name="QlzTabBar">
        <attr name="qlzEntries" format="reference" />
        <attr name="qlzSelectedTabIndex" format="integer" />
    </declare-styleable>

    <!-- Quiz Components -->
    <declare-styleable name="QlzAnswerOption">
        <attr name="qlzOptionText" format="string" />
        <attr name="qlzOptionIndicator" format="string" />
        <attr name="qlzOptionState" format="enum">
            <enum name="normal" value="0" />
            <enum name="selected" value="1" />
            <enum name="correct" value="2" />
            <enum name="incorrect" value="3" />
        </attr>
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="QlzProgressBar">
        <attr name="qlzProgress" format="float" />
        <attr name="qlzMaxProgress" format="float" />
        <attr name="qlzCornerRadius" />
        <attr name="qlzProgressColor" format="color|reference" />
        <attr name="qlzBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="QlzFlashcard">
        <attr name="qlzFrontText" format="string" />
        <attr name="qlzBackText" format="string" />
        <attr name="qlzFlipEnabled" format="boolean" />
        <attr name="qlzShowFront" format="boolean" />
    </declare-styleable>

    <!-- Header Components -->
    <declare-styleable name="QlzAppBar">
        <attr name="qlzTitle" />
        <attr name="qlzLeftIcon" format="reference" />
        <attr name="qlzRightIcon" format="reference" />
        <attr name="qlzShowDivider" />
    </declare-styleable>

    <declare-styleable name="QlzProfileHeader">
        <attr name="qlzUsername" format="string" />
        <attr name="qlzStreakCount" format="integer" />
        <attr name="qlzAvatarIcon" format="reference" />
    </declare-styleable>
</resources>