<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Material 3 Theme -->
    <style name="Theme.Kardio" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colors -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorPrimaryContainer">@color/background_secondary</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorSecondaryContainer">@color/background_secondary</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_secondary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Kardio.Headline1</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.Kardio.Headline2</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.Kardio.Headline3</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Kardio.Headline4</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Kardio.Headline5</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Kardio.Headline6</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Kardio.Subtitle1</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.Kardio.Subtitle2</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Kardio.Body1</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Kardio.Body2</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Kardio.Button</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.Kardio.Caption</item>

        <!-- Components -->
        <item name="materialCardViewStyle">@style/Widget.Kardio.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.Kardio.BottomNavigationView</item>
        <item name="tabStyle">@style/Widget.Kardio.TabLayout</item>
        <item name="searchViewStyle">@style/Widget.Kardio.SearchView</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.Kardio.FloatingActionButton</item>

    </style>

    <!-- Material 3 CardView -->
    <style name="Widget.Kardio.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">1dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.Kardio.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/background_primary</item>
        <item name="itemIconTint">@color/nav_item_selector</item>
        <item name="itemTextColor">@color/nav_item_selector</item>
    </style>

    <!-- TabLayout -->
    <style name="Widget.Kardio.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/background_primary</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabSelectedTextColor">@color/tab_selected</item>
        <item name="tabTextColor">@color/tab_unselected</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabInlineLabel">true</item>
    </style>

    <!-- SearchView -->
    <style name="Widget.Kardio.SearchView" parent="Widget.Material3.SearchView">
        <item name="queryBackground">@color/background_input</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
    </style>

    <!-- FAB -->
    <style name="Widget.Kardio.FloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="backgroundTint">@color/primary_button</item>
        <item name="iconTint">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Kardio.FAB</item>
    </style>


    <style name="ShapeAppearance.Kardio.FAB" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
