<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hiệu ứng khi card được nhấn (pressed state) -->
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="@integer/anim_duration_short"
                android:propertyName="translationZ"
                android:valueTo="@dimen/elevation_sm"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="@integer/anim_duration_short"
                android:propertyName="scaleX"
                android:valueTo="0.98"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="@integer/anim_duration_short"
                android:propertyName="scaleY"
                android:valueTo="0.98"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- Hiệu ứng khi card trở về trạng thái bình thường (default state) -->
    <item>
        <set>
            <objectAnimator
                android:duration="@integer/anim_duration_short"
                android:propertyName="translationZ"
                android:valueTo="0dp"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="@integer/anim_duration_short"
                android:propertyName="scaleX"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:duration="@integer/anim_duration_short"
                android:propertyName="scaleY"
                android:valueTo="1.0"
                android:valueType="floatType" />
        </set>
    </item>
</selector>